$headerBody = #696969

body
    height 100vh
    width 100vw
    background-color #C0C0C0
    margin 0
    padding 0

#header
    top 0
    margin 0
    width 100%
    height 10%
    background-color $headerBody

    h1
        margin 0

.swiper-container
    width 100%
    height 90%

    .swiper-wrapper

        .swiper-slide
            width 100%
            display flex
            justify-content center
            align-items center

            .slide
                display block
                width 75%

#google-form
    position relative
    width 100%
    height 0
    padding-top 75%

    #post-form
        position absolute
        top 0
        left 0
        width 100%
        height 100%